<Page x:Class="TaskScheduler.Pages.MyTasks"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MyTasks"
      Background="#F4F6F6">

    <Page.Resources>
        <DataTemplate x:Key="TaskCardTemplate">
            <Border BorderBrush="#DDDDDD" BorderThickness="1" CornerRadius="6" Padding="12" Margin="0, 5, 0, 5" Background="White" HorizontalAlignment="Stretch">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="{Binding Task.Name}" FontSize="18" FontWeight="Bold" Foreground="#2C3E50"/>
                        <TextBlock FontSize="12" Foreground="#95A5A6" Margin="0, 4, 0, 0">
                            <Run Text="Приоритет: "/>
                            <Run Text="{Binding Task.Priority.Name}" FontWeight="SemiBold"/>
                        </TextBlock>
                    </StackPanel>
                    <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right">
                        <TextBlock Text="{Binding DueDate, StringFormat='Срок: {0:dd MMMM yyyy}', ConverterCulture='ru-RU'}" FontSize="14" FontWeight="SemiBold" HorizontalAlignment="Right"/>
                        <TextBlock Text="{Binding Status.Name}" FontSize="12" Foreground="#2980B9" HorizontalAlignment="Right" Margin="0, 5, 0, 0"/>
                    </StackPanel>
                </Grid>
            </Border>
        </DataTemplate>
    </Page.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Margin="0, 0, 0, 15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="Фильтр по статусу:" VerticalAlignment="Center" Margin="0, 0, 10, 0" Foreground="#7F8C8D"/>
                <ComboBox x:Name="cbStatusFilter" Width="220" Height="30" DisplayMemberPath="Name" SelectedValuePath="Id" ItemsSource="{Binding StatusList}" SelectionChanged="FilterChanged"/>
            </StackPanel>
            <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right">
                <TextBlock Text="Сортировка:" VerticalAlignment="Center" Margin="0, 0, 10, 0" Foreground="#7F8C8D"/>
                <ComboBox x:Name="cbSortBy" Width="220" Height="30" SelectionChanged="FilterChanged">
                    <ComboBoxItem Content="По сроку (сначала раньше)"/>
                    <ComboBoxItem Content="По дате (сначала позже)"/>
                    <ComboBoxItem Content="По приоритету (сначала высокий)"/>
                    <ComboBoxItem Content="По приоритету (сначала низкий)"/>
                </ComboBox>
            </StackPanel>
        </Grid>
        <Separator Grid.Row="1" Margin="0, 0, 0, 15"/>
        <ListBox Grid.Row="2" x:Name="TasksListBox" ItemsSource="{Binding TaskList}" SelectionChanged="TasksListBox_SelectionChanged" ItemTemplate="{StaticResource TaskCardTemplate}" Background="Transparent" BorderThickness="0" HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch"/>
    </Grid>
</Page>