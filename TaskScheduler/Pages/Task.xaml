<Page x:Class="TaskScheduler.Pages.Task"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TaskScheduler.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Task"
      Background="#F4F6F6">

    <ScrollViewer Margin="30">
        <StackPanel Width="600" HorizontalAlignment="Left">

            <TextBlock Text="{Binding currentSchedule.Task.Name}" FontSize="28" FontWeight="Bold" Foreground="#2C3E50" Margin="0,0,0,15"/>

            <StackPanel Style="{StaticResource InfoBlockStyle}">
                <TextBlock Text="Описание:" Style="{StaticResource HeaderTextBlockStyle}"/>
                <TextBlock Text="{Binding currentSchedule.Task.Description}" TextWrapping="Wrap" FontSize="16"/>
            </StackPanel>

            <Separator Margin="0,15"/>

            <Grid Margin="0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Приоритет" Style="{StaticResource HeaderTextBlockStyle}"/>
                    <TextBlock x:Name="tbPriorityName" Text="{Binding currentSchedule.Task.Priority.Name}" FontSize="16" FontWeight="SemiBold"/>
                </StackPanel>
                <StackPanel Grid.Column="1">
                    <TextBlock Text="Тип задачи" Style="{StaticResource HeaderTextBlockStyle}"/>
                    <TextBlock Text="{Binding currentSchedule.Task.TaskType.Name}" FontSize="16" FontWeight="SemiBold"/>
                </StackPanel>
                <StackPanel Grid.Column="2">
                    <TextBlock Text="Срок" Style="{StaticResource HeaderTextBlockStyle}"/>
                    <TextBlock Text="{Binding currentSchedule.DueDate, StringFormat='{}{0:dd MMMM yyyy}', ConverterCulture='ru-RU'}" FontSize="16" FontWeight="SemiBold" />
                </StackPanel>
            </Grid>

            <Separator Margin="0,15"/>

            <StackPanel x:Name="spEditStatus" Margin="0,10,0,30">
                <TextBlock Text="Текущий статус" Style="{StaticResource HeaderTextBlockStyle}"/>
                <ComboBox x:Name="cbEditStatus" ItemsSource="{Binding AvailableStatuses}" SelectedItem="{Binding Status}" DisplayMemberPath="Name" SelectionChanged="cbEditStatus_SelectionChanged" Width="200" HorizontalAlignment="Left" Style="{StaticResource ComboBoxStyle}">
                    <ComboBox.Resources>
                        <Style TargetType="{x:Type ComboBoxItem}">
                            <Setter Property="Padding" Value="10,5"/>
                        </Style>
                    </ComboBox.Resources>
                </ComboBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <Button Content="Сохранить" x:Name="btnSave" Visibility="Collapsed" Click="btnSave_Click" Style="{StaticResource SaveButton}" BorderThickness="0" Margin="0,0,10,0"/>
                <Button Content="Удалить" x:Name="btnDelete" Click="btnDelete_Click" Style="{StaticResource DeleteButton}" BorderThickness="0"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>